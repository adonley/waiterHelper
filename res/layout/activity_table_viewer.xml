<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/tableViewerHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#000000"
        android:text="@string/app_name"
        />
     <Button
        android:id="@+id/addOrderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:height="40dp"
        android:width="40dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#000000"
        android:text="@string/plus"
        />
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tableViewerHeader"
        >
        <Button 
		    android:id="@+id/deleteOrderButton"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentBottom="true"
        	android:textSize="15dp"
        	android:height="50dp"
        	android:textStyle="normal"
        	android:typeface="serif"
        	android:textColor="#FF0000"
        	android:text="@string/clearOrders"
        	/>
        <Button 
		    android:id="@+id/deleteSelectedOrderButton"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_toRightOf="@id/deleteOrderButton"
        	android:layout_alignParentRight="true"
        	android:layout_alignParentBottom="true"
        	android:textSize="15dp"
        	android:height="50dp"
        	android:textStyle="normal"
        	android:typeface="serif"
        	android:textColor="#000000"
        	android:text="@string/clearSelected" 
        	/>
        <ListView
    		android:id="@+id/ordersList"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_below="@id/tableViewerHeader"
    		android:layout_above="@id/deleteOrderButton"
    		android:layout_alignParentTop="true"

    		/>
        
    </RelativeLayout>


</RelativeLayout>
